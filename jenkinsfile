pipeline {
    agent any 

    stages {
        stage('Checkout') {
            steps {
                // Récupérer le code source
                git url: 'https://your-repo-url.git' // Remplacez par l'URL de votre dépôt
            }
        }

        stage('Install Dependencies') {
            steps {
                // Installer les dépendances si nécessaire (exemple avec pip)
                sh 'pip install -r requirements.txt' // Assurez-vous d'avoir un fichier requirements.txt si nécessaire
            }
        }

        stage('Run Tests') {
            steps {
                // Exécuter les tests unitaires
                sh 'python -m unittest discover'
            }
        }
    }

    post {
        always {
            // Actions à exécuter après l'exécution du pipeline (par exemple, archive des résultats, notification, etc.)
            junit 'test_*.xml' // Si vous générez des rapports JUnit
        }
    }
}
